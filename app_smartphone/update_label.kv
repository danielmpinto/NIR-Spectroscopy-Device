<screen1>:
	direction: 'right'
	MDScreen:
		name: 'chart'
		size: root.width, root.height
		
	
		MDTopAppBar:
        	title: "Chart"
			size_hint_y: .1
			pos_hint: {"center_x": .5, "center_y": .95}
			elevation: 4
			


		MDSpinner:
			id: progress
			active: False
			determinate: True
			determinate_time: 5
			pos_hint: {"center_x": .5, "center_y": .40}
			line_width: dp(5)
			size_hint_x: 0.5
		


		MDFloatingActionButton:
			id: home
			icon: "home-outline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			size: "84dp", "84dp"
			pos_hint: {"center_x": .5, "center_y": .1}
			on_release: root.manager.transition.direction = 'left'
			on_release: root.manager.current = 'index'

<screen2>:
	MDScreen:
		name: 'index'
		size: root.width, root.height

		MDTopAppBar:
        	title: "GlucoMeasure"
			size_hint_y: .1
			pos_hint: {"center_x": .5, "center_y": .95}
			elevation: 4
			


		MDSpinner:
			id: progress
			active: False
			determinate: True
			determinate_time: 5
			pos_hint: {"center_x": .5, "center_y": .3}
			line_width: dp(5)
			size_hint_x: 0.7
		

		MDSpinner:
			id: prg_chart
			active: False
			determinate: True
			determinate_time: 0.5
			pos_hint: {"center_x": .2, "center_y": .6}
			line_width: dp(5)
			size_hint_x: 0.7

		MDFloatingActionButton:
			id: chart
			icon: "chart-areaspline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			style: "filled"
			size: "84dp", "84dp"
			pos_hint: {"center_x": .2, "center_y": .6}
			on_release: root.manager.transition.direction = 'right'
			on_release: root.manager.current = 'chart'

		MDFloatingActionButton:
			id: btnplay
			icon: "play"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			size: "150dp", "150dp"
			pos_hint: {"center_x": .5, "center_y": .3}
			on_release: root.start_progress()

		MDFloatingActionButton:
			id: perfil
			icon: "account-edit-outline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			style: "filled"
			size: "84dp", "84dp"
			pos_hint: {"center_x": .8, "center_y": .6}
			on_release: root.manager.transition.direction = 'left'
			on_release: root.manager.current = 'about'

<screen3>:
	MDScreen:
		name: 'about'
		size: root.width, root.height

		MDTopAppBar:
        	title: "About"
			size_hint_y: .1
			pos_hint: {"center_x": .5, "center_y": .95}
			elevation: 4


		
				
		MDLabel:
			text: "Experimental: Created for helping measuring and keeping data for TCC"
			halign: 'center'

	


		MDFloatingActionButton:
			id: home
			icon: "home-outline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			size: "84dp", "84dp"
			pos_hint: {"center_x": .5, "center_y": .1}
			on_release: root.manager.transition.direction = 'right'
			on_release: root.manager.current = 'index'

	

		
		
		
		
		
		
		