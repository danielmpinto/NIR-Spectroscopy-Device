<screen1>:
	direction: 'right'
	MDScreen:
		name: 'chart'
		size: root.width, root.height
		
	
		MDTopAppBar:
			type: "small"
			size_hint_x: 1
			size_hint_y: .1
			pos_hint: {"center_x": .5, "center_y": .95}


			MDTopAppBarTitle:
				text: "Chart"
				style: "tonal"
				bold: True
				theme_font_size: "Custom"
				font_size: "20sp"
				pos_hint: {"center_x": .5}
			


		MDCircularProgressIndicator:
			id: progress
			active: False
			determinate: True
			determinate_time: 5
			pos_hint: {"center_x": .5, "center_y": .40}
			line_width: dp(5)
			size_hint_x: 0.5
		


		MDIconButton:
			id: home
			icon: "home-outline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			style: "filled"
			radius: [self.height / 2, ]
			size: "84dp", "84dp"
			pos_hint: {"center_x": .5, "center_y": .1}
			on_release: root.manager.transition.direction = 'left'
			on_release: root.manager.current = 'index'

<screen2>:
	MDScreen:
		name: 'index'
		size: root.width, root.height

		MDTopAppBar:
			type: "small"
			size_hint_x: 1
			size_hint_y: .1
			pos_hint: {"center_x": .5, "center_y": .95}


			MDTopAppBarTitle:
				text: "GlucoMeasure"
				style: "tonal"
				bold: True
				theme_font_size: "Custom"
				font_size: "20sp"
				pos_hint: {"center_x": .5}
			


		MDCircularProgressIndicator:
			id: progress
			active: False
			determinate: True
			determinate_time: 5
			pos_hint: {"center_x": .5, "center_y": .3}
			line_width: dp(5)
			size_hint_x: 0.7
		

		MDCircularProgressIndicator:
			id: prg_chart
			active: False
			determinate: True
			determinate_time: 0.5
			pos_hint: {"center_x": .2, "center_y": .6}
			line_width: dp(5)
			size_hint_x: 0.7

		MDIconButton:
			id: chart
			icon: "chart-areaspline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			style: "filled"
			radius: [self.height / 2, ]
			size: "84dp", "84dp"
			pos_hint: {"center_x": .2, "center_y": .6}
			on_release: root.manager.transition.direction = 'right'
			on_release: root.manager.current = 'chart'

		MDIconButton:
			id: btnplay
			icon: "play"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			style: "filled"
			radius: [self.height / 2, ]
			size: "150dp", "150dp"
			pos_hint: {"center_x": .5, "center_y": .3}
			on_release: root.start_progress()

		MDIconButton:
			id: perfil
			icon: "account-edit-outline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			style: "filled"
			radius: [self.height / 2, ]
			size: "84dp", "84dp"
			pos_hint: {"center_x": .8, "center_y": .6}
			on_release: root.manager.transition.direction = 'left'
			on_release: root.manager.current = 'about'

<screen3>:
	MDScreen:
		name: 'about'
		size: root.width, root.height

		MDTopAppBar:
			type: "small"
			size_hint_x: 1
			size_hint_y: .1
			pos_hint: {"center_x": .5, "center_y": .95}


			MDTopAppBarTitle:
				text: "About"
				style: "tonal"
				bold: True
				theme_font_size: "Custom"
				font_size: "20sp"
				pos_hint: {"center_x": .5}
		MDLabel:
			text: "Experimental: Created for helping measuring and keeping data for TCC"
			halign: 'center'

	


		MDIconButton:
			id: home
			icon: "home-outline"
			angle: 120
			font_size: "70sp"
			theme_bg_color: "Primary"
			style: "filled"
			radius: [self.height / 2, ]
			size: "84dp", "84dp"
			pos_hint: {"center_x": .5, "center_y": .1}
			on_release: root.manager.transition.direction = 'right'
			on_release: root.manager.current = 'index'

	

		
		
		
		
		
		
		